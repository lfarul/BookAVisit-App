@model IEnumerable<Doctor>


@{
    ViewBag.Title = "Doctor List";
}

<h4>Wykaz pracowników</h4>
<hr />
<a class="btn btn-dark" style="width:auto" asp-action="Create" asp-controller="Doctor">Dodaj lekarza</a>
<br />

<div class="card-deck">

    @foreach (var doctor in Model)
    {
        var photoPath = "~/Images/" + (doctor.PhotoPath ?? "bg_3.jpg");

        <div class="card m-3" style="min-width: 16rem; max-width: 30.5%;">
            <div class="card-body">
                <h5 class="card-title">@doctor.Specialty</h5>
                <h5 class="card-title">lek. @doctor.FirstName @doctor.LastName</h5>
                <hr />
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">

                <a asp-controller="Doctor" asp-action="Details" asp-route-id="@doctor.DoctorID" class="btn btn-primary m-1">Podgląd</a>
                <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@doctor.DoctorID" class="btn btn-primary m-1">Edytuj</a>
                <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.DoctorID" class="btn btn-danger"
                   onclick="return confirm('Czy na pewno chcesz usunąć lekarza: @doctor.FirstName @doctor.LastName ?')">Usuń</a>
            </div>
        </div>
    }
</div>


